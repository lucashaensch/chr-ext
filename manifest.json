{
	// Required
	"manifest_version": 2,

	"name": "Deu na Quina",
	"description": "Como confiar nos números aleatórios da Quina? Confie apenas em 5 Math.random() gerados diretamente no seu Google Chrome",
	"version": "0.0.1",

	"browser_action": {
		"default_popup": "popup.html"
	},

	"icons": {
		"26": "icon26.png",
		"48": "icon48.png",
		"128": "icon128.png" 
	},

	// Recommended
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/"
	]
}